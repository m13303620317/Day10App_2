<Page
    x:Class="Day10App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Day10App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <Storyboard x:ConnectionId='2' x:Name="spinrect">
            <DoubleAnimation To="270"  
                             Storyboard.TargetName="spinme"
                             Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                             />
        </Storyboard>
    </Page.Resources>

    <Grid>
        <StackPanel x:ConnectionId='3' Margin="282,300,-282,-300"                         >
            <StackPanel.Resources>
                <Storyboard x:ConnectionId='4' x:Name="colorStoryboard">
                    <ColorAnimation Storyboard.TargetName="mySolidColorBrush"
                                    Storyboard.TargetProperty="Color" 
                                    From="Red" 
                                    To="Yellow" 
                                    Duration="0:0:1"
                                    />
                    <!-- Animate the background color of the canvas from red to green
        over 4 seconds. -->
                    <!--<ColorAnimationUsingKeyFrames
                        Storyboard.TargetName="spinme"
                        Storyboard.TargetProperty="Color">
                        <ColorAnimation Storyboard.TargetName="mySolidColorBrush"
                                    Storyboard.TargetProperty="Color" 
                                    From="Red" 
                                    To="Yellow" 
                                    Duration="0:0:1"
                                    />
                        <ColorAnimation Storyboard.TargetName="mySolidColorBrush"
                                    Storyboard.TargetProperty="Color"
                                    From="Yellow"
                                    To="Green"
                                    Duration="0:0:1" 
                                    />
                        <DiscreteColorKeyFrame Value="Red" KeyTime="0:0:0" />
                        <DiscreteColorKeyFrame Value="Yellow" KeyTime="0:0:1"/>
                        <DiscreteColorKeyFrame Value="Green" KeyTime="0:0:2" />
                    </ColorAnimationUsingKeyFrames>-->
                </Storyboard>
            </StackPanel.Resources>
            
            
            <Rectangle x:ConnectionId='5' x:Name="spinme" Width="50" Height="50" RenderTransformOrigin="0.5,4.5"
                              >

                <Rectangle.RenderTransform>
                    <RotateTransform/>
                </Rectangle.RenderTransform>
                <Rectangle.Fill>
                    <SolidColorBrush x:ConnectionId='6' x:Name="mySolidColorBrush" Color="Red" />
                    <!--<SolidColorBrush x:Name="mySolidColorBrush2" Color="Yellow" />-->
                </Rectangle.Fill>
            </Rectangle>
        </StackPanel>
    </Grid>
</Page>

